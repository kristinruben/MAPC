<div class="ui form">
  <%= form_for @demo do |f| %>
    <div class="field">
      <%= f.label :first_name, 'Name' %>
      <%= f.text_field :first_name, placeholder: "First Name" %>
    </div>
    <div class="field">
      <%= f.text_field :last_name, placeholder: "Last Name" %>
    </div>
      <%= f.submit @submit, :class => 'ui button' %>
  <% end %>
</div>
